<Page
    x:Class="Booking_app.View.BookPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Booking_app.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="using:Booking_app.ViewModel"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">
    <Page.DataContext>
        <viewModel:BookPageViewModel />
    </Page.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.RowSpan="2" Grid.ColumnSpan="8" Grid.Column="0"  Background="#FFF387">
            <TextBlock FontFamily="{Binding Font}" Text="Available rooms" FontSize="80" TextAlignment="Center" HorizontalTextAlignment="Center" VerticalAlignment="Center" />
        </StackPanel>
        <Viewbox
            Grid.RowSpan="8" Grid.ColumnSpan="4" Grid.Column="2" Grid.Row="2"
            
            VerticalAlignment="Top">
            <StackPanel>
                
                <ListView ItemsSource="{Binding AvailableRooms, UpdateSourceTrigger=PropertyChanged}" SelectedIndex="{Binding SelectedRoom, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
            </StackPanel>
        </Viewbox>
        <Viewbox
            Grid.Row="2"
            Grid.Column="2"
            Grid.ColumnSpan="4"
            Grid.RowSpan="6"
            Margin="20"
            VerticalAlignment="Top">
            <StackPanel>
                <TextBlock
                    HorizontalAlignment="Center"
                    FontFamily="{Binding Font}"
                    Text="Date" />
                <DatePicker Width="300" SelectedDate="{Binding Date, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
        </Viewbox>
        <StackPanel
            Background="#FFF387"
            Grid.Row="9"
            Grid.Column="3"
            Grid.ColumnSpan="2"
            
            >
            <Button Command="{Binding BookRoomCommand}" Content="Book" Width="375" Height="90" FontSize="50" Background="#FFF387"/>
        </StackPanel>
        <StackPanel
            Background="#FFF387"
            Grid.Row="9"
            Grid.Column="1">
            <Button Command="{Binding BackCommand}" Content="Back" Width="190" Height="90" FontSize="50" Background="#FFF387"/>
        </StackPanel>

    </Grid>
</Page>
