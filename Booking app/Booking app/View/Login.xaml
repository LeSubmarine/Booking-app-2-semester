<Page
    x:Class="Booking_app.View.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Booking_app.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="using:Booking_app.ViewModel"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    RequestedTheme="Light"
    mc:Ignorable="d">
    <Page.DataContext>
        <viewModel:LoginViewModel />
    </Page.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Viewbox
            Grid.Row="0"
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <TextBlock Text="Gimme Dat Room" />
        </Viewbox>
        <Viewbox
            Grid.Row="1"
            Grid.Column="1"
            VerticalAlignment="Top">
            <StackPanel>
                <TextBlock HorizontalAlignment="Center" Text="E-mail" />
                <TextBox
                    Width="100"
                    PlaceholderText="E-mail"
                    Text="{Binding Email, Mode=TwoWay}" />
                <TextBlock HorizontalAlignment="Center" Text="Password" />
                <PasswordBox
                    Width="100"
                    Password="{Binding Password, Mode=TwoWay}"
                    PasswordChar="*"
                    PlaceholderText="Password" />
                <Button
                    Width="100"
                    HorizontalAlignment="Center"
                    Command="{Binding LoginCommand}"
                    Content="Log ind" />
            </StackPanel>
        </Viewbox>
        <Viewbox
            Grid.Row="2"
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <Button
                Margin="100,0"
                Command="{Binding CreateUserCommand}"
                Content="Create User" />
        </Viewbox>

    </Grid>
</Page>
